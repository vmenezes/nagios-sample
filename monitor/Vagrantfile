Vagrant.require_version ">= 1.7.0"

Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/xenial64"

  # Specify a box version for our own sanity
  config.vm.box_version = "20170119.1.0"

  # AVOID PROBLEMS HAVING A DIFF IP PER VM RUNNING
  config.vm.network :private_network, ip: "33.33.33.200"

  # AVOID PROBLEMS HAVING A DIFF HOSTNAME BY VM RUNNING
  config.vm.hostname = "nagios-monitor"

  config.vm.provider :virtualbox do |vbox|
    vbox.customize ["modifyvm", :id, "--memory", "1024"]
  end

  config.vm.provision "shell", inline: <<-SHELL
    sudo apt-get update

    # Install Nagios
    #sudo apt install -y nagios3 nagios-nrpe-plugin

    # Update password of Nagios user
    #sudo htpasswd -b /etc/nagios3/htpasswd.users nagiosadmin NAGIOS_PWD

    # To add new Nagios users
    # sudo htpasswd /etc/nagios3/htpasswd.users NEW_USER

  SHELL

end
